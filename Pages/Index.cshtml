@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Cards</h1>
    <form method="post" asp-page-handler="Shuffle">
        <button type="submit" class="btn btn-primary">Shuffle Cards</button>
    </form>

    <div class="card-container">
        <h3>Selected Cards:</h3>
        <ul>
            @foreach (var card in Model.SelectedCards)
            {
                <li>@card</li>
            }
        </ul>
    </div>

    <div class="card-container">
        @foreach (var card in Model.Cards)
        {
            <form method="post" asp-page-handler="SelectCard">
                <input type="hidden" name="card" value="@card" />
                <button type="submit" class="card">@card</button>
            </form>
        }
    </div>
</div>

<style>
    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 10px;
        margin-top: 20px;
    }
    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.2s ease-in-out, background-color 0.5s ease, box-shadow 0.5s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        background-color: #6fc9a9; /* Subtle color shift to a lighter gray */
        box-shadow: 0 8px 16px rgba(0,0,0,0.2); /* Enhanced shadow for a "lifted" effect */
        cursor: pointer;
    }
    .btn-primary {
        margin-bottom: 20px;
    }
</style>